#!/usr/bin/env xonsh

import sys
import json

$DEBUG_TYPE = sys.argv[1] if len(sys.argv) == 2 else ''

cp ~/src/work/pacer_android/app/build/outputs/apk/play$DEBUG_TYPE/release/app-play$DEBUG_TYPE-release.apk /tmp/pacer.apk
result = $(curl -F "file=@/tmp/pacer.apk" -F "uKey=$PGY_UID" -F "_api_key=$PGY_PID" https://qiniu-storage.pgyer.com/apiv1/app/upload)

result = json.loads(result)
print(result)
