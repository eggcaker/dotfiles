#!/bin/bash

#        name: gh-cnf
# description: the command not found handler
#       alias:
#      author: eggcaker <eggcaker@gmail.com>
#     updated: 2015-12-13


code="`echo  $1|grep -e '[0-9]\{6\}'`";
if [ "$code" != "" ]; then
  zi s $code
  exit;
fi

word="`echo $1|grep -e '[a-z]\{4,\}'`";
if [ "$word" != "" ]; then
  fanyi $*;
  exit;
fi

fortune -n 200| cowsay 

