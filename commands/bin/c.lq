#!/bin/zsh

website_url="http://www.baidu.com/s?ie=utf-8&wd=双色球开奖结果"
wget -O tmp.html $website_url  > /dev/null 2>&1


start_line="`cat tmp.html|grep -n 'class="op_caipiao_table'|awk -F: '{print $1}'`"
total_line="`cat tmp.html|wc -l`"
cut_line="`expr $total_line - $start_line + 2`"

tail -n $cut_line tmp.html  |head -n 1  > tmp2.html

w3m -dump tmp2.html  > tmp.html
result="`cat tmp.html |head -n 3 |tail -n 1 `"
rm tmp.html
rm tmp2.html
echo $result



